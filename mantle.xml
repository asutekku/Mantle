<?xml version="1.0" encoding="UTF-8"?>
<project name="mantle" default="all">
  
  
  <property file="mantle.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Mantle -->
  
  <dirname property="module.mantle.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.mantle" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mantle" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mantle" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mantle" value="-encoding UTF-16 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="mantle.output.dir" value="${module.mantle.basedir}/out/production/Mantle"/>
  <property name="mantle.testoutput.dir" value="${module.mantle.basedir}/out/test/Mantle"/>
  
  <path id="mantle.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mantle.module.production.classpath">
    <path refid="${module.jdk.classpath.mantle}"/>
    <pathelement location="${basedir}/../../Downloads/fxgui.jar"/>
    <pathelement location="${basedir}/src/mantle/include/Ali.jar"/>
    <pathelement location="${basedir}/src/mantle/include/fxgui.jar"/>
  </path>
  
  <path id="mantle.runtime.production.module.classpath">
    <pathelement location="${mantle.output.dir}"/>
    <pathelement location="${basedir}/../../Downloads/fxgui.jar"/>
    <pathelement location="${basedir}/src/mantle/include/Ali.jar"/>
    <pathelement location="${basedir}/src/mantle/include/fxgui.jar"/>
  </path>
  
  <path id="mantle.module.classpath">
    <path refid="${module.jdk.classpath.mantle}"/>
    <pathelement location="${mantle.output.dir}"/>
    <pathelement location="${basedir}/../../Downloads/fxgui.jar"/>
    <pathelement location="${basedir}/src/mantle/include/Ali.jar"/>
    <pathelement location="${basedir}/src/mantle/include/fxgui.jar"/>
  </path>
  
  <path id="mantle.runtime.module.classpath">
    <pathelement location="${mantle.testoutput.dir}"/>
    <pathelement location="${mantle.output.dir}"/>
    <pathelement location="${basedir}/../../Downloads/fxgui.jar"/>
    <pathelement location="${basedir}/src/mantle/include/Ali.jar"/>
    <pathelement location="${basedir}/src/mantle/include/fxgui.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.mantle">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mantle">
    <patternset refid="excluded.from.module.mantle"/>
  </patternset>
  
  <path id="mantle.module.sourcepath">
    <dirset dir="${module.mantle.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mantle" depends="compile.module.mantle.production,compile.module.mantle.tests" description="Compile module Mantle"/>
  
  <target name="compile.module.mantle.production" depends="register.custom.compilers" description="Compile module Mantle; production classes">
    <mkdir dir="${mantle.output.dir}"/>
    <javac2 destdir="${mantle.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mantle}/javac">
      <compilerarg line="${compiler.args.mantle}"/>
      <bootclasspath refid="mantle.module.bootclasspath"/>
      <classpath refid="mantle.module.production.classpath"/>
      <src refid="mantle.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mantle"/>
    </javac2>
    
    <copy todir="${mantle.output.dir}">
      <fileset dir="${module.mantle.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mantle.tests" depends="register.custom.compilers,compile.module.mantle.production" description="compile module Mantle; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mantle" description="cleanup module">
    <delete dir="${mantle.output.dir}"/>
    <delete dir="${mantle.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.mantle" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.mantle" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.mantle" value="${basedir}/out/artifacts/Mantle"/>
    <property name="artifact.output.mantle:jar" value="${basedir}/out/artifacts/Mantle_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Mantle.jar" value="${artifacts.temp.dir}/Mantle.jar"/>
    <property name="temp.jar.path.Mantle.jar2" value="${artifacts.temp.dir}/1/Mantle.jar"/>
    <mkdir dir="${artifacts.temp.dir}/1"/>
  </target>
  
  <target name="artifact.mantle" depends="init.artifacts" description="Build &#39;Mantle&#39; artifact">
    <property name="artifact.temp.output.mantle" value="${artifacts.temp.dir}/Mantle"/>
    <mkdir dir="${artifact.temp.output.mantle}"/>
    <jar destfile="${temp.jar.path.Mantle.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain"/>
    <copy file="${temp.jar.path.Mantle.jar}" tofile="${artifact.temp.output.mantle}/Mantle.jar"/>
  </target>
  
  <target name="artifact.mantle:jar" depends="init.artifacts, compile.module.mantle" description="Build &#39;Mantle:jar&#39; artifact">
    <property name="artifact.temp.output.mantle:jar" value="${artifacts.temp.dir}/Mantle_jar"/>
    <mkdir dir="${artifact.temp.output.mantle:jar}"/>
    <jar destfile="${temp.jar.path.Mantle.jar2}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${mantle.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.Mantle.jar2}" tofile="${artifact.temp.output.mantle:jar}/Mantle.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.mantle, artifact.mantle:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.mantle}"/>
    <copy todir="${artifact.output.mantle}">
      <fileset dir="${artifact.temp.output.mantle}"/>
    </copy>
    <mkdir dir="${artifact.output.mantle:jar}"/>
    <copy todir="${artifact.output.mantle:jar}">
      <fileset dir="${artifact.temp.output.mantle:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>